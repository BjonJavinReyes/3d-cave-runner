<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/skillzDialog"
    style="@style/Skillz.I10.View.Dialog.Background"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <LinearLayout
        android:id="@+id/skillzDialogContent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/skillz_i4_prompt_silver_slate_temp"
        android:orientation="vertical" >
        <ScrollView
            android:id="@+id/skillzDialogMessageScroll"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical">
		        <RelativeLayout
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content" >
					<LinearLayout
					    android:id="@+id/skillzConfigPinContainer"
					    android:layout_width="match_parent"
					    android:layout_height="match_parent"
					    android:gravity="center"
					    android:orientation="vertical"
					    android:visibility="visible" >
						<com.skillz.android.client.ui.views.GradientTextView
				            android:id="@+id/skillzDialogMessage"
				            android:layout_width="fill_parent"
				            android:layout_height="wrap_content"
				            android:startColor="@color/skillz_i4_text_gradient_blueslate_start"
				            android:endColor="@color/skillz_i4_text_gradient_blueslate_end"
				            android:angle="90"
				            android:gravity="center"
				            android:singleLine="true"
				            android:layout_marginTop="10dp"
				            android:layout_marginBottom="20dp"
				            android:text="@string/skillz_i4_dialog_pin_settings_config"
				            android:contentDescription="@string/skillz_i4_font_helvetica_black_cn"
				            style="@style/Skillz.I4.TextView.Black.XLarge" /> 
				        <EditText 
				            android:id="@+id/skillzPin"
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:layout_gravity="center"
				            android:gravity="left|center_vertical"
				            android:singleLine="true"
				            android:hint="@string/skillz_i4_dialog_pin_hint"
				            android:maxLength="4"
				            android:inputType="number|textNoSuggestions|textFilter"
				            style="Skillz.I11.Input.Text.Prompt"
				            />
		        		 <com.skillz.android.client.ui.views.GradientTextView
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:layout_gravity="center"
				            android:layout_marginTop="20dp"
				            android:startColor="@color/skillz_i4_text_gradient_blueslate_start"
				            android:endColor="@color/skillz_i4_text_gradient_blueslate_end"
				            android:angle="90"
				            android:gravity="center"
				            android:text="@string/skillz_i4_dialog_pin_settings_config_pin_desc"
				            android:contentDescription="@string/skillz_i4_font_helvetica_roman"
				            style="@style/Skillz.I4.TextView.Black.Small" /> 
					</LinearLayout>
					
			        <LinearLayout
			            android:id="@+id/skillzConfigParamContainer"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:visibility="gone"
			            android:orientation="vertical">
				        <com.skillz.android.client.ui.views.GradientTextView
				            android:id="@+id/skillzPinSettingsHeader"
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:layout_marginTop="10dp"
				            android:layout_marginBottom="5dp"
				            android:startColor="@color/skillz_i4_text_gradient_blueslate_start"
				            android:endColor="@color/skillz_i4_text_gradient_blueslate_end"
				            android:angle="90"
				            android:gravity="left|center_vertical"
				            android:text="@string/skillz_i4_dialog_pin_settings_config_require"
				            android:contentDescription="@string/skillz_i4_font_helvetica_roman"
				            style="@style/Skillz.I4.TextView.Black.SmallPlus" />
				        <LinearLayout
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:gravity="center_vertical"
				            android:orientation="horizontal">
					        <CheckBox
					            android:id="@+id/skillzPinRequireCashTournament"
					            android:layout_width="wrap_content"
					            android:layout_height="wrap_content"
					            android:gravity="left|center_vertical"
					            android:enabled="false"
					            style="Skillz.Input.CheckBox"
					            />
					        <com.skillz.android.client.ui.views.GradientTextView
					            android:id="@+id/skillzPinRequireCashTournamentLabel"
					            android:layout_width="wrap_content"
					            android:layout_height="wrap_content"
					            android:gravity="left|center_vertical"
					            android:startColor="@color/skillz_i4_text_gradient_blueslate_start"
				           		android:endColor="@color/skillz_i4_text_gradient_blueslate_end"
				           		android:angle="90"
					            android:text="@string/skillz_i4_dialog_pin_settings_config_require_cash_tournament"
					            style="@style/Skillz.I4.TextView.Black.Small"
					            />
					        </LinearLayout>
				        <LinearLayout
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:gravity="center_vertical"
				            android:orientation="horizontal">
					        <CheckBox
					            android:id="@+id/skillzPinRequirePlayAgain"
					            android:layout_width="wrap_content"
					            android:layout_height="wrap_content"
					            android:gravity="left|center_vertical"
					            android:enabled="false"
					            style="Skillz.Input.CheckBox"
					            />
					        <com.skillz.android.client.ui.views.GradientTextView
					            android:id="@+id/skillzPinRequirePlayAgainLabel"
					            android:layout_width="wrap_content"
					            android:layout_height="wrap_content"
					            android:gravity="left|center_vertical"
					            android:startColor="@color/skillz_i4_text_gradient_blueslate_start"
				           		android:endColor="@color/skillz_i4_text_gradient_blueslate_end"
				           		android:angle="90"
					            android:text="@string/skillz_i4_dialog_pin_settings_config_require_play_again"
					            style="@style/Skillz.I4.TextView.Black.Small"
					            />
					    </LinearLayout>
				        <LinearLayout
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:gravity="center_vertical"
				            android:orientation="horizontal">
					        <CheckBox
					            android:id="@+id/skillzPinRequireStoredDeposit"
					            android:layout_width="wrap_content"
					            android:layout_height="wrap_content"
					            android:gravity="left|center_vertical"
					            android:enabled="false"
					            style="Skillz.Input.CheckBox"
					            />
					        <com.skillz.android.client.ui.views.GradientTextView
					            android:id="@+id/skillzPinRequireStoredDepositLabel"
					            android:layout_width="wrap_content"
					            android:layout_height="wrap_content"
					            android:gravity="left|center_vertical"
					            android:startColor="@color/skillz_i4_text_gradient_blueslate_start"
				           		android:endColor="@color/skillz_i4_text_gradient_blueslate_end"
				           		android:angle="90"
					            android:text="@string/skillz_i4_dialog_pin_settings_config_require_stored_deposit"
					            style="@style/Skillz.I4.TextView.Black.Small"
					            />
					    </LinearLayout>
				        <LinearLayout
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:gravity="center_vertical"
				            android:orientation="horizontal">
					        <CheckBox
					            android:id="@+id/skillzPinRequireWithdraw"
					            android:layout_width="wrap_content"
					            android:layout_height="wrap_content"
					            android:gravity="left|center_vertical"
					            android:enabled="false"
					            style="Skillz.Input.CheckBox"
					            />
					        <com.skillz.android.client.ui.views.GradientTextView
					            android:id="@+id/skillzPinRequireWithdrawLabel"
					            android:layout_width="wrap_content"
					            android:layout_height="wrap_content"
					            android:gravity="left|center_vertical"
					            android:startColor="@color/skillz_i4_text_gradient_blueslate_start"
				           		android:endColor="@color/skillz_i4_text_gradient_blueslate_end"
				           		android:angle="90"
					            android:text="@string/skillz_i4_dialog_pin_settings_config_require_withdraw"
					            style="@style/Skillz.I4.TextView.Black.Small"
					            />
					    </LinearLayout>	
				    </LinearLayout>
				</RelativeLayout>
			</LinearLayout>
        </ScrollView>
        <LinearLayout
            android:id="@+id/skillzDialogContainer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:visibility="gone" >
        </LinearLayout>
        <LinearLayout
            android:id="@+id/skillzProgressView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="16dip"
            android:paddingTop="16dip"
            android:visibility="gone" >
            <ProgressBar
                android:id="@+id/skillzProgressBar"
                style="@android:style/Widget.ProgressBar.Inverse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip" />
            <TextView
                android:id="@+id/skillzProgressText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/skillz_i10_text_gray" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/skillzDialogFooter"
        style="@style/Skillz.I10.View.Dialog.Footer" >
        <Button
            android:id="@+id/skillzDialogCancelButton"
            android:contentDescription="@string/skillz_i4_font_helvetica_black_cn"
            style="@style/Skillz.I10.Button.Small"
            android:layout_height="40dp"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:text="@string/skillz_i4_dialog_pin_settings_button_back" />
    </LinearLayout>
</LinearLayout>