<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:orientation="horizontal"
    android:padding="4dp"
    android:gravity="center_vertical">
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <com.skillz.android.client.ui.views.PlaceView
	        android:id="@+id/skillzListItemPrizePlace"
	        style="@style/Skillz.I10.View.PlaceTile" />
    </FrameLayout>
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="right"
        android:id="@+id/skillzListItemPrizeCash"
        style="@style/Skillz.I10.Text.Gray.Small.Bold" />
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="right"
        android:id="@+id/skillzListItemPrizePoints"
        style="@style/Skillz.I10.Text.Gray.Small.Bold" />
</LinearLayout>