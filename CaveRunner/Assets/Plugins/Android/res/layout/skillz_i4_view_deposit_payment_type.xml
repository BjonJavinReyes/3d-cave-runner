    </LinearLayout>
   	<LinearLayout
   	    android:id="@+id/skillzVisaExisting"
   	    android:layout_width="match_parent"
   	    android:layout_height="wrap_content"
   	    android:gravity="center_vertical"
   	    android:orientation="horizontal"
   	    android:visibility="gone">
   	    <ImageView
   	        android:id="@+id/skillzChangePayment"
	   	    android:layout_width="wrap_content"
	   	    android:layout_height="wrap_content"
	   	    android:layout_marginLeft="@dimen/skillz_i4_margin_half"
	   	    android:src="@drawable/skillz_i4_icon_card_add" />
	   	<TextView
	   	    android:id="@+id/skillzVisaExistingText"
	   	    android:layout_width="match_parent"
	   	    android:layout_height="36dp"
	   	    android:layout_marginLeft="@dimen/skillz_i4_margin_half"
	   	    android:layout_marginRight="@dimen/skillz_i4_margin_half"
	   	    android:layout_marginTop="@dimen/skillz_i4_margin_quarter"
	   	    android:layout_marginBottom="@dimen/skillz_i4_margin_quarter"
	   	    android:gravity="right|center_vertical"
	   	    android:enabled="false"
	   	    android:drawableLeft="@drawable/skillz_i4_icon_visa"
	   	    style="@style/Skillz.I4.EditText.Light.DarkGray.SmallPlus" />
