<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="6dip">
        <TextView
            android:text="@string/skillz_i10_deposit_purchase_amount"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:textColor="@color/skillz_i10_text_gray"
            android:layout_weight="126"
             />
        <TextView
            android:id="@+id/skillzDialogPurchaseConfirmationPurchaseAmount"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="90"
            android:gravity="right"
            android:textColor="@color/skillz_i10_text_gray"
            android:paddingLeft="6dip"
             />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="6dip" >
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="126"
            android:textColor="@color/skillz_i10_text_gray"
            android:text="@string/skillz_i10_deposit_purchase_z_points" />
        <TextView
            android:id="@+id/skillzDialogPurchaseConfirmationZPoints"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="90"
            android:gravity="right"
            android:textColor="@color/skillz_i10_text_gray"
            android:paddingLeft="6dip"
             />
    </LinearLayout>
    <View
        android:layout_height="1dip"
        android:layout_width="fill_parent"
        android:background="@color/skillz_i10_text_gray" />
 
   <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="6dip" >
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="126"
            android:textColor="@color/skillz_i10_text_gray"
            android:text="@string/skillz_deposit_current_balance" />
        <TextView
            android:id="@+id/skillzDialogPurchaseCurrentBalancePoints"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="70"
            android:gravity="right"
            android:textColor="@color/skillz_i10_text_gray"
            android:paddingLeft="6dip"
             />
    </LinearLayout>
</LinearLayout>