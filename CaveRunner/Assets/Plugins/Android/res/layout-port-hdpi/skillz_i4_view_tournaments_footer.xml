<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp" 
    android:background="@drawable/skillz_i4_bg_tournaments_footer_arrow">
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true">
        <LinearLayout 
            android:id="@+id/skillzFooterContentContainer"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/skillzFooterContentLeft"
                android:background="@drawable/skillz_i4_bg_footer_profile"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_weight="5">
                <RelativeLayout
                    android:id="@+id/skillzAvatarContainer"
       				android:layout_width="48dp"
      				android:layout_height="48dp"
      				android:layout_margin="2dp"
      				android:background="@drawable/skillz_i4_bg_tournaments_footer_avatar" >
      				<com.skillz.android.client.ui.views.AvatarImageView
			            android:id="@+id/skillzAvatarImage"
			            android:layout_width="46dp"
			            android:layout_height="46dp"
			            android:layout_centerInParent="true"
			            android:scaleType="centerInside"
			            android:src="@drawable/skillz_i4_icon_avatar_default" />
      			</RelativeLayout>
      			<LinearLayout
      			    android:layout_width="0dp"
      			    android:layout_height="50dp"
      			    android:layout_weight="1"
      			    android:orientation="vertical">
      			    <TextView
      			        android:id="@+id/skillzFooterUsername"
      			        android:layout_width="match_parent"
      			        android:layout_height="0dp"
      			        android:layout_weight="1"
      			        android:paddingLeft="1dp"
      			        android:gravity="left|center_vertical"
      			        android:contentDescription="@string/skillz_font_helvetica_black_cn"
      			        android:textColor="#ffffff"
      			        android:textSize="@dimen/skillz_i4_text_small"
      			        android:singleLine="true"
      			        />
      			    <TextView
      			        android:id="@+id/skillzFooterWins"
      			        android:layout_width="match_parent"
      			        android:layout_height="0dp"
      			        android:layout_weight="1"
      			        android:singleLine="true"
      			        android:gravity="center_vertical|left"
      			        android:textColor="@color/skillz_i4_text_white"
      			        android:textSize="@dimen/skillz_i4_text_small"
      			        android:contentDescription="@string/skillz_font_helvetica_medium"
      			        android:drawableLeft="@drawable/skillz_i4_icon_wins_medal_sm"
      			        />
      			</LinearLayout> 
            </LinearLayout>
            <LinearLayout
                android:id="@+id/skillzFooterContentDivider"
                android:layout_width="1dp"
                android:layout_height="match_parent" />
            <LinearLayout
                android:id="@+id/skillzFooterContentRight"
                android:background="#42454e"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5">
                <FrameLayout 
                    android:background="@drawable/skillz_i4_bg_tournaments_footer_balance"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp">
				     <LinearLayout
				         android:id="@+id/skillzFooterBalanceContainer"
					     android:layout_width="wrap_content"
					     android:layout_height="wrap_content"
					     android:layout_gravity="right|center_vertical"
					     android:layout_marginRight="80dp"
					     android:orientation="vertical"
					     android:padding="0dp">
					     <TextView
					     	android:id="@+id/skillzFooterCashBalance"
					     	android:layout_width="match_parent"
					     	android:layout_height="wrap_content"
					     	android:gravity="right|center_vertical"
					     	android:textColor="@color/skillz_i4_text_white"
					     	android:contentDescription="@string/skillz_i4_font_helvetica_bold"
					     	/>
					     <TextView
					        android:id="@+id/skillzFooterPointsBalance"
					     	android:layout_width="match_parent"
					     	android:layout_height="wrap_content"
					     	android:gravity="right|center_vertical"
					     	android:textColor="@color/skillz_i4_text_blue_standard"
					     	android:contentDescription="@string/skillz_i4_font_helvetica_medium"
					     	/>
				     </LinearLayout>
				 	<TextView
				 	    android:id="@+id/skillzFooterNoCashPointsBalance"
				 	    android:layout_width="match_parent"
				 	    android:layout_height="match_parent"
				 	    android:gravity="right|center_vertical"
				 	    android:textColor="@color/skillz_i4_text_blue_standard"
				 	    android:contentDescription="@string/skillz_i4_font_helvetica_bold"
				 	    android:textSize="@dimen/skillz_i4_text_medium"
				 	    android:drawableLeft="@drawable/skillz_i4_icon_z"
				 	    android:paddingTop="1dp"
				 	    android:paddingLeft="4dp"
				 	    android:paddingRight="4dp"
				 	    android:visibility="invisible" />
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>  
    </RelativeLayout>
    <ImageView
        android:id="@+id/skillzAddCash"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:src="@drawable/skillz_i4_button_add_cash" 
	    android:layout_alignParentRight="true"
	    android:layout_marginRight="-40dp"
	    android:layout_marginBottom="-30dp"
	    android:clickable="true"
	    android:visibility="visible"
     />
</RelativeLayout>