<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:background="@drawable/skillz_i4_background">
    <include layout="@layout/skillz_i10_actionbar" />
		<RelativeLayout
	    	android:layout_width="fill_parent"
	        android:layout_height="fill_parent">
	        <LinearLayout
	       		android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:orientation="vertical">
	            <TextView
			    	android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:text="@string/skillz_i10_gamers_invite_invite_your_contacts"
			        android:background="@drawable/skillz_i10_bg_list_header"
			        android:paddingLeft="@dimen/skillz_i10_side_margin"
			        style="@style/Skillz.I10.Text.White.Small.Bold.Shadow" />
	            <LinearLayout
	                android:id="@+id/skillzGamersInviteContainer"
	                android:layout_width="fill_parent"
	                android:layout_height="fill_parent">
	                <ListView
	                    android:id="@+id/skillzGamersInviteContactsListView"
	                    android:layout_width="fill_parent"
	                    android:layout_height="fill_parent"
	                    style="@style/Skillz.I10.View.ListView" />
	            </LinearLayout>
	       </LinearLayout>
			<LinearLayout
			    android:visibility="gone"
			    android:id="@+id/skillzGamersInviteToolbar"
			    android:layout_width="fill_parent"
			    android:layout_alignParentBottom="true"
			    android:layout_height="40dp"
			    android:orientation="vertical"
			    android:background="@color/skillz_i10_bg">
			    <View android:layout_width="fill_parent"
			        android:layout_height="2dp"
			        android:background="#000000" />
			    <LinearLayout
			        android:layout_width="fill_parent"
			        android:layout_height="fill_parent"
			        android:orientation="horizontal">
			        <TextView
			            android:id="@+id/skillzGamersInviteInviteMultiple"
			            android:layout_width="0dp"
			            android:layout_weight="1"
			            android:layout_height="fill_parent"
			            android:gravity="center"
			            style="@style/Skillz.I10.Text.Blue.Small.Bold" />
			        <TextView
			            android:id="@+id/skillzGamersInviteDeselectAll"
			            android:layout_width="0dp"
			            android:layout_weight="1"
			            android:layout_height="fill_parent"
			            android:gravity="center"
			            android:text="@string/skillz_i10_gamers_invite_cancel"
			            style="@style/Skillz.I10.Text.Blue.Small.Bold" />
		    	</LinearLayout>
		</LinearLayout>
    </RelativeLayout>
</LinearLayout>