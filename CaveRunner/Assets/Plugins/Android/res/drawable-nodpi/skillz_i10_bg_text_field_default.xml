<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#4f4f4f"/>
            <corners android:radius="@dimen/skillz_text_corner_radius"/>
        </shape>
    </item>
    <item android:top="2dp" android:right="2dp" android:bottom="2dp" android:left="2dp">
        <shape android:shape="rectangle">
           	<gradient 
           	    android:startColor="#b4b4b4"
           	    android:endColor="#d5d5d5"
           	    android:angle="270"/>
            <corners android:radius="@dimen/skillz_text_corner_radius_inner"/>
            <padding
                android:left="@dimen/skillz_i10_text_field_padding_left" 
            	android:top="@dimen/skillz_i10_text_field_padding"
             	android:right="@dimen/skillz_i10_text_field_padding_left"
             	android:bottom="@dimen/skillz_i10_text_field_padding"/>
        </shape>
    </item>
</layer-list>